                    <a href="{{ path('app_forgot_password_request') }}">Mot de pas oubli√©?</a>
                </div> -->


                <div class="checkbox mb-3 pt-3" style="color:rgb(68, 68, 226)">
                    <label>
                        <input type="checkbox" value="remember-me"> Remember me
                    </label>
                </div>
                <button class="btn btn-lg btn-primary btn-block" type="submit"><strong style="color: white">Sign
                        in</strong></button>

                <div class="text-center pt-3">
                    <a class="btn md-3 btn-outline-primary my-2 my-sm-0 small" href="/inscription">Not a account? Create an
                        Account!</a>
                </div>

                <p class="mt-5 mb-3 text-muted text-center">&copy; DJIBBA </p>
            </form>
        </div>
    </div>
    <div class="container col-4 navbar-dark bg-dark " style="margin-top: 170px">

